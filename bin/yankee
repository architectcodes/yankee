#! /usr/bin/env node

const commander = require('commander');
const yankee = require('..');

const options = {};

commander
  .arguments('[path]',
    'The path to your project directory. Should contain a `Changelog.yaml`.',
    '$(pwd)'
  )
  .action((path) => {
    options.path = path;
  })
  .parse(process.argv);

const bumpData = yankee(options);
process.stdout.write(`${bumpData.newVersion}\n`);
